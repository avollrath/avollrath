---
// Import statements
import Layout from '../layouts/Layout.astro';
const allPosts = await Astro.glob('../pages/posts/*.md');
---

<Layout title="Blog" description="Latest blog posts">
    {allPosts.map((post) => (
        <div class="block cursor-pointer dark:bg-gradient-to-r from-dark-card to-darker-card rounded-lg col-span-12 shadow-xl bg-white border-gradient group">
            <!-- Wrapping the entire post in an <a> tag -->
            <a href={post.url} class="flex flex-col md:flex-row items-center overflow-hidden rounded-l-lg">
                
                <!-- Image Container with overflow-hidden -->
                <div class="overflow-hidden w-full md:w-auto max-w-3xl">
                    <!-- Image with scale and transition effect on group hover -->
                    <img src={post.frontmatter.image.url} alt={post.frontmatter.image.alt} 
                         class="w-full transform transition duration-1000 group-hover:scale-125">
                </div>
                
                <!-- Text Content Container -->
                <div class="p-24 flex flex-col justify-center md:justify-between w-full">
                    <div>
                        <h2 class="text-5xl font-bold mb-2 long-transition">{post.frontmatter.title}</h2>
                        <p class="dark:text-gray-300 text-gray-500 text-xl long-transition">{post.frontmatter.description}</p>
                    </div>
                 
                </div>
            </a>
        </div>
    ))}
</Layout>
